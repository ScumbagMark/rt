<%ARGS>
$cmd => "results"
$name
$key => undef
$value => undef
</%ARGS>
<%init>

use RT::CannedReports;
use JSON;

my %object = (
    message => loc("Unknown Error"),
    code => 500,
    content => ["Failed"],
);

my $reports = RT::CannedReports->new($session{'CurrentUser'});
my $report = $reports->ReportFromReportName($name);
if ($cmd eq "results") {
    if (ref $report) {
        my $results = $report->Results(\%ARGS);
        if ($key && $key eq "table") {
            my $html = "<table>";
            for my $hashRef (@$results) {
                $html .= "\n";
                $html .= "<tr>\n<td>" . $hashRef->{name} . "</td>\n<td>" . $hashRef->{value} . "</td>\n</tr>";
            }
            $html .= "\n</table>";
            $object{content} = [$html];
            $object{code} = 200;
        }else{
            $object{content} = $results;
            $object{code} = 200;
        }
    }
}elsif ($cmd eq "options") {
    if (ref $report) {
        my $options = $report->Options;
        $object{content} = $options;
        $object{code} = 200;
    }
}elsif ($cmd eq "optionsMenuItem") {
    if (ref $report) {
        my $options = $report->Options;
        $object{content} = $m->scomp('/CannedReport/Elements/MenuItems/OptionSelect', name => $name, option => $key, value => $value);
        $object{code} = 200;
    }
}

$m->out(encode_json(\%object));
</%init>
% $m->abort();
